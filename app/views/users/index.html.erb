<h1 align="center">All Alpha Bloggers</h1>
<% @users.each do |user| %>
  <ul class="listing" align="center">
    <div class="row">
      <div clas="well col-md-4 col-md-offset-4 center">
        <li><%= link_to(gravatar_for((user), size: 150), user_path(user)) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><smal>
          <%= pluralize(user.articles.count, "article") if user.articles %>
        </smal></li>
      </div>
    </div>
  </ul>
<% end %>
